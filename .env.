  -e BOLT_API_KEY=$YOUR_BOLT_KEY \
  -e SUPABASE_URL=$YOUR_SUPABASE_URL \
  --name crypto-clashers clashers-prod

# Get public URL (requires ngrok)
ngrok http 8080
