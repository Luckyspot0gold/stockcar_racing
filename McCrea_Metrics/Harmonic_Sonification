    <script>
        // Create cosmic background animation
        function createCosmicBackground() {
            const container = document.getElementById('cosmicAnimation');
            for (let i = 0; i < 150; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                star.style.width = Math.random() * 3 + 'px';
                star.style.height = star.style.width;
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 5 + 's';
                container.appendChild(star);
            }
        }
        
        // Initialize charts
        function initCharts() {
            // HRI Chart
            const hriCtx = document.getElementById('hriChart').getContext('2d');
            const hriChart = new Chart(hriCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'HRI Value',
                        data: [45, 52, 48, 60, 65, 68, 72, 70, 69, 72, 71, 73],
                        borderColor: '#ffd700',
                        backgroundColor: 'rgba(255, 215, 0, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 40,
                            max: 80,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            
            // SSS Chart
            const sssCtx = document.getElementById('sssChart').getContext('2d');
            const sssChart = new Chart(sssCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'SSS Value',
                        data: [65, 68, 72, 75, 70, 78, 80, 82, 79, 83, 84, 84],
                        borderColor: '#00ff8b',
                        backgroundColor: 'rgba(0, 255, 139, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            min: 60,
                            max: 90,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
            
            return { hriChart, sssChart };
        }
        
        // Update values with slight random fluctuations
        function updateValues() {
            // HRI value between 65-85
            const hriValue = 70 + Math.random() * 15;
            document.getElementById('hriValue').textContent = hriValue.toFixed(1);
            document.getElementById('hriGauge').style.width = `${hriValue}%`;
            
            // Set resonance level based on value
            let resonanceLevel = 'Medium';
            if (hriValue > 80) resonanceLevel = 'Very High';
            else if (hriValue > 70) resonanceLevel = 'High';
            else if (hriValue > 60) resonanceLevel = 'Medium';
            else if (hriValue > 50) resonanceLevel = 'Low';
            else resonanceLevel = 'Very Low';
            
            document.getElementById('resonanceLevel').textContent = resonanceLevel;
            
            // SSS value between 75-90
            const sssValue = 78 + Math.random() * 12;
            document.getElementById('sssValue').textContent = sssValue.toFixed(1);
            document.getElementById('sssGauge').style.width = `${sssValue}%`;
            
            // Set stability level based on value
            let stabilityLevel = 'High';
            if (sssValue > 85) stabilityLevel = 'Very High';
            else if (sssValue > 75) stabilityLevel = 'High';
            else if (sssValue > 65) stabilityLevel = 'Medium';
            else if (sssValue > 55) stabilityLevel = 'Low';
            else stabilityLevel = 'Very Low';
            
            document.getElementById('stabilityLevel').textContent = stabilityLevel;
            
            // Update Bitcoin price with slight random change
            const currentPrice = parseFloat(document.getElementById('btcPrice').textContent.replace('$', '').replace(',', ''));
            const changePercent = (Math.random() - 0.45) * 0.4; // -0.18% to +0.18%
            const newPrice = currentPrice * (1 + changePercent);
            
            document.getElementById('btcPrice').textContent = `$${newPrice.toLocaleString('en-US', {maximumFractionDigits: 2})}`;
            
            const changeElement = document.getElementById('btcChange');
            if (changePercent >= 0) {
                changeElement.textContent = `+${(changePercent * 100).toFixed(2)}%`;
                changeElement.className = 'positive';
            } else {
                changeElement.textContent = `${(changePercent * 100).toFixed(2)}%`;
                changeElement.className = 'negative';
            }
        }
        
        // Initialize countdown timer
        function initCountdown() {
            let seconds = 300; // 5 minutes
            
            setInterval(() => {
                seconds--;
                if (seconds < 0) {
                    seconds = 300;
                    updateValues();
                }
                
                const minutes = Math.floor(seconds / 60);
                const remainingSeconds = seconds % 60;
                document.getElementById('countdown').textContent = `${minutes}:${remainingSeconds.toString().padStart(2, '0')}`;
            }, 1000);
        }
        
        // Initialize the dashboard
        function initDashboard() {
            createCosmicBackground();
            initCharts();
            updateValues();
            initCountdown();
            
            // Update values every 5 minutes (simulated with more frequent updates for demo)
            setInterval(updateValues, 300000);
        }
        
        // Start the dashboard when the page loads
        window.onload = initDashboard;
    </script>
</body>
</html>
